@model List<CategoryViewModel>

<section class="category-menu py-3">
  <div class="container">
    <h2 class="h3 mb-4">Browse Categories</h2>

    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3">
      @foreach (var category in Model)
      {
        <div class="col">
          <a asp-controller="Products" asp-action="Index" asp-route-categoryId="@category.Id"
             class="category-card text-decoration-none d-block">
            <div class="card h-100 border shadow-sm">
              <div class="card-body text-center">
                <h3 class="h5 card-title mb-3">@category.Name</h3>
                <span class="badge bg-primary rounded-pill">@category.ProductCount products</span>
              </div>
            </div>
          </a>
        </div>
      }

      @if (Model.Count == 0)
      {
        <div class="col-12 text-center py-4">
          <p class="text-muted">No categories available.</p>
        </div>
      }
    </div>
  </div>
</section>

<style>
  .category-card .card {
    transition: all 0.3s ease;
  }

  .category-card:hover .card {
    transform: translateY(-5px);
    background-color: #f8f9fa;
  }
</style>
