@model ProductListViewModel

@{
  ViewData["Title"] = "Products";
}

<div class="d-flex gap-2">
  <div class="col-3 border border-dark rounded">
    <p class="text-center sticky-top">Filter Panel</p>
  </div>
  <div class="col-9 border border-dark rounded">
    <div class="container">
      @if (Model.Products.Any())
      {
        <div class="row">
          @foreach (var product in Model.Products)
          {
            <div class="col-sm-6 col-md-4 col-lg-3">
              <partial name="_ProductCardPartial" model="product">
            </div>
          }
        </div>
      }
      else
      {
        <span class="text-center">Found 0 products.</span>
      }
    </div>
  </div>
</div>