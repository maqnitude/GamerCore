@model ProductReviewViewModel

<div class="card border-0 mb-3">
  <div class="card-body">
    <div class="d-flex justify-content-between mb-2">
      <div>
        <h6 class="fw-bold mb-1">@Model.UserFirstName @Model.UserLastName</h6>
        <small class="text-muted">Reviewed on ReviewDate</small>
      </div>
      <partial name="_ProductRatingPartial" model="((double)Model.Rating, (int?)null, true)" />
    </div>

    <hr>

    @if (!string.IsNullOrEmpty(Model.ReviewTitle))
    {
      <h5 class="mb-2">@Model.ReviewTitle</h5>
    }

    @if (!string.IsNullOrEmpty(Model.ReviewText))
    {
      <p class="card-text">@Model.ReviewText</p>
    }
    else
    {
      <p class="card-text text-muted"><em>No comment provided.</em></p>
    }

    @*
    <div class="mt-2">
      <span class="badge bg-success">
        <i class="bi bi-check-circle me-1"></i> Verified Purchase
      </span>
    </div>
    *@
  </div>
</div>

